@model Dictionary<NiCATPortal.Models.Student,int?>

@{
    ViewBag.Title = ViewBag.CourseName + " > Ocene";
}

<h2>ViewBag.Title</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Ime")
        </th>
        <th>
            @Html.DisplayName("Prezime")
        </th>
        <th>
            @Html.DisplayName("Ocena")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Key.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Key.LastName)
        </td>
        @if (item.Value == null)
        {
            <td></td>
        }
        else
        {
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
        }
        <td>
            @if (User.IsInRole("Teacher"))
            {
                @Html.ActionLink("Oceni", "Create", new { studentId = item.Key.Id, courseId = ViewBag.CourseId })
            }
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
