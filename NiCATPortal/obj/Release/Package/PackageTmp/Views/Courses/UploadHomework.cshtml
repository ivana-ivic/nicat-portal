@model NiCATPortal.Models.Course
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Postavi domaći zadatak";
}

<h2>Postavi domaći zadatak</h2>

@using (Html.BeginForm("UploadHomework", "Courses", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Domaći zadatak</h4>
        <hr />
        <h5>Kurs:  @Model.Name</h5>

        <div class="form-group" style="display:none">
            @Html.Label("Course Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("courseId", new { htmlAttributes = new { @class = "form-control", @Value = Model.Id } })
            </div>
        </div>
    </div>

    <div class="form-group" style="display:none">
        @Html.Label("User Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("userId", new { htmlAttributes = new { @class = "form-control", @Value = User.Identity.GetUserId() } })
        </div>
    </div>

    <input type="file" name="file" class="btn btn-default" style="margin: 10px 0 10px 0;" />
    <input type="submit" name="Submit" id="Submit" value="Dodaj" class="btn btn-default" />
}