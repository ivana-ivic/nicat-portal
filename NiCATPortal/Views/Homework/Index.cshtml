@model IEnumerable<NiCATPortal.Models.Homework>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = ViewBag.CourseName + " > " + "Domaći zadaci";
}

<h2>ViewBag.Title</h2>

@if (User.IsInRole("Student"))
{
    <p>
        @Html.ActionLink("Postavi domaći zadatak", "UploadHomework", "Courses", new { courseId = ViewBag.courseId }, null)
    </p>
}

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @*@if (User.IsInRole("Student"))
            {
                @Html.ActionLink("Ažuriraj", "Edit", new { id = item.Id })<span> | </span>
            }*@
            @*@Html.ActionLink("Detalji", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Skini", "DownloadHomework", new { id=item.Id@*, courseId = ViewBag.courseId*@ })<span> | </span>
            @Html.ActionLink("Obriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
