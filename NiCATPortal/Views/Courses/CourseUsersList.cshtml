@model IEnumerable<NiCATPortal.Models.ApplicationUser>
@using Microsoft.AspNet.Identity;
@using NiCATPortal.Models;

@{
    ViewBag.Title = ViewBag.CourseName + " > " + ViewBag.UsersType;
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Ime")
        </th>
        <th>
            @Html.DisplayName("Prezime")
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @if (ViewBag.UsersType == "Studenti")
                {
                    @Html.ActionLink("Detalji", "Details", "Students", new { id = item.Id }, new { @class = "btn btn-primary" })
                }
                else
                {
                    @Html.ActionLink("Detalji", "Details", "Teachers", new { id = item.Id }, new { @class = "btn btn-primary" })
                }
            </td>
        </tr>
    }
</table>